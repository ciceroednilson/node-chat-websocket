<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Cícero Ednilson - Chat</title>
		
		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
	
		<!-- estilo -->
		<link href="css/style.css" rel="stylesheet">
	</head>

	<body class="login-body">

		<div class="container">
            <div class="row vertical-offset-350">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                   
                        <div class="panel-body">
                            <form accept-charset="UTF-8" role="form" class="form-signin" action="/chat" method="POST">
                                <fieldset>
                                    <label class="panel-login">
                                        <div class="login_result"></div>
                                    </label>
                                    <input class="form-control" placeholder="Informe o nickname" id="nickname" name="nickname" type="text">
                                    <br></br>
                                    <input class="btn btn-lg btn-success btn-block" type="submit" id="entrar" value="Entrar »">
                                </fieldset>
                            </form>
                        </div>

                        <div>
                            <!--TRATA OS ERROS DE VALIDAÇÃO-->
                            <% if(validacao.length > 0){ %>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="alert alert-danger">
                                            <strong>Alerta!</strong>
                                            <ul>
                                                <%for(var index = 0; index < validacao.length; index++){%>
                                                <li><%=validacao[index].msg %></li>
                                                <%}%>
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                            <% } %>
                        </div>

                    </div>
                </div>
            </div>
        </div>
		
	</body>
</html>